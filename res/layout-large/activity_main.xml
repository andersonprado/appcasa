<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/button1"
        android:layout_width="180dp"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:onClick="onClick2"
        android:text="@string/name_quarto" />

    <Button
        android:id="@+id/button2"
        android:layout_width="180dp"
        android:layout_height="65dp"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="45dp"
        android:onClick="onClick3"
        android:text="@string/name_garagem" />

    <Button
        android:id="@+id/button3"
        android:layout_width="180dp"
        android:layout_height="65dp"
        android:layout_alignLeft="@+id/button2"
        android:layout_below="@+id/button2"
        android:layout_marginTop="45dp"
        android:onClick="onClick4"
        android:text="@string/name_corredor" />

    <Button
        android:id="@+id/button6"
        android:layout_width="180dp"
        android:layout_height="65dp"
        android:layout_alignLeft="@+id/button2"
        android:layout_below="@+id/button3"
        android:layout_marginTop="45dp"
        android:onClick="onClick6"
        android:text="@string/name_sala" />

    <Button
        android:id="@+id/button5"
        android:layout_width="180dp"
        android:layout_height="65dp"
        android:layout_alignLeft="@+id/button2"
        android:layout_below="@+id/button6"
        android:layout_marginTop="45dp"
        android:onClick="onClick5"
        android:text="@string/name_quintal" />

    <Button
        android:id="@+id/button8"
        android:layout_width="180dp"
        android:layout_height="65dp"
        android:layout_alignLeft="@+id/button2"
        android:layout_below="@+id/button5"
        android:layout_marginTop="45dp"
        android:onClick="onClick8"
        android:text="@string/name_cozinha" />

</RelativeLayout>